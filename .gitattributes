    <script>
        // æ—¥è¨˜ãƒ‡ãƒ¼ã‚¿ã‚’ä¿å­˜ã™ã‚‹é…åˆ—
        let diaryEntries = [];
        let editingIndex = -1;

        // ç¾åœ¨ã®æ—¥ä»˜ã‚’è¨­å®š
        document.getElementById('entry-date').valueAsDate = new Date();

        // æ°—åˆ†é¸æŠã®å‡¦ç†
        document.querySelectorAll('.mood-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.mood-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
            });
        });

        // æ¤œç´¢æ©Ÿèƒ½
        document.getElementById('search-input').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            displayEntries(searchTerm);
        });

        // æ—¥è¨˜ã‚’ä¿å­˜ã™ã‚‹é–¢æ•°
        function saveEntry() {
            const date = document.getElementById('entry-date').value;
            const title = document.getElementById('entry-title').value;
            const content = document.getElementById('entry-content').value;
            const activeMoodBtn = document.querySelector('.mood-btn.active');
            const mood = activeMoodBtn ? activeMoodBtn.dataset.mood : '';

            if (!date || !title || !content) {
                alert('æ—¥ä»˜ã€ã‚¿ã‚¤ãƒˆãƒ«ã€å†…å®¹ã‚’ã™ã¹ã¦å…¥åŠ›ã—ã¦ãã ã•ã„ã€‚');
                return;
            }

            const entry = {
                date: date,
                title: title,
                content: content,
                mood: mood,
                timestamp: new Date().toISOString()
            };

            if (editingIndex >= 0) {
                // ç·¨é›†ãƒ¢ãƒ¼ãƒ‰
                diaryEntries[editingIndex] = entry;
                editingIndex = -1;
                document.querySelector('.save-btn').textContent = 'ğŸ“ ä¿å­˜ã™ã‚‹';
            } else {
                // æ–°è¦è¿½åŠ 
                diaryEntries.unshift(entry);
            }

            // ãƒ•ã‚©ãƒ¼ãƒ ã‚’ãƒªã‚»ãƒƒãƒˆ
            document.getElementById('entry-title').value = '';
            document.getElementById('entry-content').value = '';
            document.querySelectorAll('.mood-btn').forEach(b => b.classList.remove('active'));
            document.getElementById('entry-date').valueAsDate = new Date();

            // æ—¥è¨˜ãƒªã‚¹ãƒˆã‚’æ›´æ–°
            displayEntries();
            
            // æˆåŠŸãƒ¡ãƒƒã‚»ãƒ¼ã‚¸
            alert('æ—¥è¨˜ãŒä¿å­˜ã•ã‚Œã¾ã—ãŸï¼');
        }

        // æ—¥è¨˜ãƒªã‚¹ãƒˆã‚’è¡¨ç¤ºã™ã‚‹é–¢æ•°
        function displayEntries(searchTerm = '') {
            const entriesList = document.getElementById('entries-list');
            
            if (diaryEntries.length === 0) {
                entriesList.innerHTML = '<div class="no-entries">ã¾ã æ—¥è¨˜ãŒæ›¸ã‹ã‚Œã¦ã„ã¾ã›ã‚“ã€‚æœ€åˆã®æ—¥è¨˜ã‚’æ›¸ã„ã¦ã¿ã¾ã—ã‚‡ã†ï¼</div>';
                return;
            }

            let filteredEntries = diaryEntries;
            if (searchTerm) {
                filteredEntries = diaryEntries.filter(entry => 
                    entry.title.toLowerCase().includes(searchTerm) ||
                    entry.content.toLowerCase().includes(searchTerm)
                );
            }

            if (filteredEntries.length === 0) {
                entriesList.innerHTML = '<div class="no-entries">æ¤œç´¢çµæœãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“ã§ã—ãŸã€‚</div>';
                return;
            }

            entriesList.innerHTML = filteredEntries.map((entry, index) => {
                const originalIndex = diaryEntries.indexOf(entry);
                return `
                    <div class="entry-item">
                        <div class="entry-header">
                            <div class="entry-date">${formatDate(entry.date)}</div>
                            <div class="entry-mood">${entry.mood}</div>
                        </div>
                        <div class="entry-title">${entry.title}</div>
                        <div class="entry-content">${entry.content.substring(0, 100)}${entry.content.length > 100 ? '...' : ''}</div>
                        <div class="entry-actions">
                            <button class="edit-btn" onclick="editEntry(${originalIndex})">âœï¸ ç·¨é›†</button>
                            <button class="delete-btn" onclick="deleteEntry(${originalIndex})">ğŸ—‘ï¸ å‰Šé™¤</button>
                        </div>
                    </div>
                `;
            }).join('');
        }

        // æ—¥ä»˜ã‚’ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆã™ã‚‹é–¢æ•°
        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('ja-JP', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                weekday: 'long'
            });
        }

        // æ—¥è¨˜ã‚’ç·¨é›†ã™ã‚‹é–¢æ•°
        function editEntry(index) {
            const entry = diaryEntries[index];
            
            document.getElementById('entry-date').value = entry.date;
            document.getElementById('entry-title').value = entry.title;
            document.getElementById('entry-content').value = entry.content;
            
            // æ°—åˆ†ã‚’é¸æŠ
            document.querySelectorAll('.mood-btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.dataset.mood === entry.mood) {
                    btn.classList.add('active');
                }
            });

            editingIndex = index;
            document.querySelector('.save-btn').textContent = 'ğŸ“ æ›´æ–°ã™ã‚‹';
            
            // ãƒ•ã‚©ãƒ¼ãƒ ã¾ã§ã‚¹ã‚¯ãƒ­ãƒ¼ãƒ«
            document.querySelector('.entry-form').scrollIntoView({ behavior: 'smooth' });
        }

        // æ—¥è¨˜ã‚’å‰Šé™¤ã™ã‚‹é–¢æ•°
        function deleteEntry(index) {
            if (confirm('ã“ã®æ—¥è¨˜ã‚’å‰Šé™¤ã—ã¦ã‚‚ã‚ˆã‚ã—ã„ã§ã™ã‹ï¼Ÿ')) {
                diaryEntries.splice(index, 1);
                displayEntries();
            }
        }

        // åˆæœŸè¡¨ç¤º
        displayEntries();
    </script>
